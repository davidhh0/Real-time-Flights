<!DOCTYPE html>
<html>

<head>
    <title></title>
    <meta charset="utf-8" />
    <script type='text/javascript' src='http://www.bing.com/api/maps/mapcontrol?callback=GetMap' async defer></script>
    <script type='text/javascript'>
        function pushpinClicked(e) {
            //Make sure the infobox has metadata to display.
            console.log("im here")
            //Set the infobox options with the metadata of the pushpin.
            infobox.setOptions({
                location: e.target.getLocation(),
                title: e.target.metadata.title,
                description: e.target.metadata.description,
                visible: true
            });

        }
        function GetMap() {
            var map = new Microsoft.Maps.Map('#myMap', {
                credentials: 'AmGGEcxxukm2TTJsvwQr2bBybgLf69ARx-ZLlE9QyJIlfqVd-STwIkjSpBt5fZq6'
            });
            infobox = new Microsoft.Maps.Infobox( {
                visible: false
            });
            infobox.setMap(map);
            fetch('http://localhost:3000/landing')
                .then((response) => {
                    return response;
                })
                .then((myJson) => {
                    var code = myJson.json();
                    code.then(value => {
                        //console.log(value);
                        for (let i = 0; i < value.length; i++) {
                            var obj = value[i];
                            var loc = new Microsoft.Maps.Location(obj['lat'], obj['lng']);
                            let angle = obj['orientaion'];
                            var pushpin = new Microsoft.Maps.Pushpin(loc);
                            createRotatedImagePushpin(obj['num'],loc, 'https://i.ibb.co/FWyC5Yz/airplane-mode-1.png', angle, function (pushpin) {
                                Microsoft.Maps.Events.addHandler(pushpin, 'click', pushpinClicked);
                                map.entities.push(pushpin);
                            });

                        }

                    }
                    )
                });

        }

        function createRotatedImagePushpin(flightnum,location, url, rotationAngle, callback) {
            var img = new Image();
            img.onload = function () {
                var c = document.createElement('canvas');

                var rotationAngleRads = rotationAngle * Math.PI / 180;

                var context = c.getContext('2d');

                //Move to the center of the canvas.
                context.translate(c.width / 2, c.height / 2);

                //Rotate the canvas to the specified angle in degrees.
                context.rotate(rotationAngleRads);

                //Draw the image, since the context is rotated, the image will be rotated also.
                context.drawImage(img, -img.width / 2, -img.height / 2);

                var pin = new Microsoft.Maps.Pushpin(location, {
                    //Generate a base64 image URL from the canvas.
                    icon: c.toDataURL(),
                    anchor: new Microsoft.Maps.Point(c.width / 2, c.height / 2) //Anchor to center of image.

                });
                pin.metadata = {
                    title: 'BLah blah',
                    description: flightnum
                };


                if (callback) {
                    callback(pin);
                }
            };

            img.crossOrigin = 'anonymous';
            img.src = url;
        }

        function listener() {
            for (let i = 1; i < 10; i++) {
                setTimeout(function timer() {
                    console.log("hello world");
                }, i * 3000);
            }
        }

    </script>
</head>

<body>
    <div id="myMap" style="max-width:100%;height:100%;
    border: 3px solid black;"></div>
</body>

</html>